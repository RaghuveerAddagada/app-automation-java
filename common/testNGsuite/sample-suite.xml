<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="Appium Automation Sample Suite" verbose="1">
    <listeners>
        <listener class-name="com.automation.listeners.TestListener"/>
    </listeners>

    <parameter name="platformName" value="android"/>
    <parameter name="deviceType" value="virtual"/>
    <parameter name="environment" value="stage"/>

    <!-- Configure app bundle ID and package name via system properties -->
    <!-- Example: -Dautomation.bundleId.stage=com.yourapp.bundle -Dautomation.packageName.stage=com.yourapp.package -->

    <!-- Optional: Configure app filename prefix -->
    <!-- Example: -Dautomation.app.filename.prefix=MyApp -->

    <!-- Optional: Configure app activity (if not using default MainActivity) -->
    <!-- Example: -DappActivityValue=com.yourapp.package.LaunchActivity -->

    <!-- Optional: App installation parameters -->
    <!--
    <parameter name="app.installation.required" value="true"/>
    <parameter name="app.name.to.install" value="/path/to/your/app.apk"/>
    -->

    <test name="Basic Tests">
        <classes>
            <class name="com.automation.tests.BasicLoginTest"/>
        </classes>
    </test>
</suite>
