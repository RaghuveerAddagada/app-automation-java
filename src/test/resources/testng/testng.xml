<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Mobile Automation Suite" parallel="tests" thread-count="2">
    <listeners>
        <listener class-name="com.framework.core.TestListener"/>
    </listeners>
    
    <parameter name="platform" value="android"/>
    
    <test name="Sample Tests">
        <classes>
            <class name="com.framework.tests.SampleTest"/>
        </classes>
    </test>
    
    <test name="Login Tests">
        <classes>
            <class name="com.framework.tests.LoginTest"/>
        </classes>
    </test>
    
    <!-- Example of iOS-specific test configuration -->
